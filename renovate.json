{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:base",
  "assignees": ["viceice"],
  "semanticCommits": "enabled",
  "automergeStrategy": "rebase",
  "woodpecker": {
    "fileMatch": [
        "(^|\\/)\\.woodpecker(?:\\/[^/]+)?\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["droneci"],
      "enabled": false
    }
  ]
}
